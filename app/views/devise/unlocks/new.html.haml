.hero-unit
  %h2= title "Resend unlock instructions"
.row
  .span12
    = form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.label :email
        %br/
        = f.email_field :email
      %div= f.submit "Resend unlock instructions"
    = render "links"
