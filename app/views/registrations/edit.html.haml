.hero-unit
  %h2 Your Profile

.row
  .span12
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { method: :put, class: 'form-horizontal' }) do |f|

      = f.input :name
      = f.input :username
      = f.input :email
      = f.input :current_password
      = f.input :bio, as: :text, input_html: {rows: 4}
      = f.input :website
      = f.input :twitter
      = f.input :public, as: :boolean
      .control-group
        .controls.profile-avatar
          = image_tag(avatar_url(resource.email, width: 36, class: "thumbnail"))
          %p
            = link_to "Change your avatar at Gravatar.com.", "http://gravatar.com/"
      .control-group
        .controls
          = link_to "Change your password", user_password_edit_path

      = f.button :submit, class: 'btn-success btn-large'
