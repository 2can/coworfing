.hero-unit
.row.users
  .span3
    %p
      = image_tag(avatar_url(@user.email, width: 210), class: 'thumbnail')
  .span9
    %h2
      = @user.name

    %table.table.table-condensed
      %tbody
        %tr
          %th.span2 Email
          %td= @user.email if user_signed_in?
        %tr
          %th Bio 
          %td= @user.bio
        %tr
          %th Website 
          %td= link_to @user.website, @user.website
        %tr
          %th Skillz 
          %td
        %tr
          %th Twitter 
          %td
