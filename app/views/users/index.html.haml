%ul.span14.thumbnails
  - @featured.each do |user|
    %li.span3
      .thumbnail
        - if user.photo?
          = link_to image_tag(user.photo_url(:medium)), profile_path(user.username || 'nil')
        - else
          = link_to image_tag('http://cambelt.co/icon/avatar/320x240'), profile_path(user.username || 'nil')
        .caption
          %h5
            = link_to truncate(user.name, :length => 18),  profile_path(user.username || 'nil')
            - if user.is_cow
              = image_tag('http://openclipart.org/image/20px/svg_to_png/169174/1332946695.png', :width => '20px', :height => '20px', :style => "float:left; margin-right: 20px;")
            - else
              = image_tag('http://openclipart.org/image/20px/svg_to_png/133591/baby-tux-vache-no-logo.png', :width => '20px', :height => '20px', :style => "float:left; margin-right: 20px;")
              
