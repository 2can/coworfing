= simple_form_for(@place, html: { class: 'form-horizontal'}) do |f|
  = f.error_notification

  %fieldset
    %legend List Your Place
    = f.input :name
    = f.input :desc
    = f.input :price
    = f.input :address_line1
    = f.input :address_line2
    = f.input :city
    = f.input :zipcode
    = f.input :country

    .form-actions
      = f.button :submit, class: 'btn-success btn-large'
