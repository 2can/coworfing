!!!
%html
  %head
    %title Coworfing 
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body{:class => params[:controller]}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Coworfing', root_path, class: 'brand'
          - if user_signed_in?
            .nav-collapse
              %ul.nav
              %ul.nav.pull-right
                %li.divider-vertical
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown"} 
                    Account 
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'Your Profile', edit_user_registration_path
                    %li= link_to 'Your Places', places_path
                    %li.divider
                    %li= link_to 'Help', destroy_user_session_path, method: :delete
                    %li= link_to 'Log out', destroy_user_session_path, method: :delete
            / /.nav-collapse

    #container.container
      = render :partial => "shared/flash_messages", :locals => {:flash => flash}

      .row
        .span12
          #main{:role => "main"}
            = yield

      %footer