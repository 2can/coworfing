!!!
%html
  %head
    %title Coworfing 
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}

    = stylesheet_link_tag :application, :media => "all"
    
    /[if lte IE 8]
      = stylesheet_link_tag "application-ie", :media => "all"
    
    = csrf_meta_tags

    = render 'layouts/analytics'

  %body
    .wrapper
      = render :partial => "shared/flash_messages", :locals => {:flash => flash}
      %header.navbar
        %nav.navbar-inner
          .container
            = link_to 'Coworfing', root_url, class: 'brand'
            = render 'layouts/navigation'


      #container.container
        #main{:role => "main"}
          = yield
        #push
    %footer{role: "sticky"}
      .container
        .row
          .span4
            %p
              Made by 
              = link_to 'Nukomeet', 'http://nukomeet.com', :rel => :nofollow, :target => '_blank'
          .span4
            %p
              = link_to(image_tag("facebook.png"), "http://www.facebook.com/coworfing", class: "icon")
              = link_to(image_tag("twitter.png"), "http://www.twitter.com/coworfing", class: "icon")
              = link_to(image_tag('tumblr.jpg'), 'http://coworfing.tumblr.com', class: "icon")
              = link_to(image_tag('gmail.png'),"mailto:coworfing@gmail.com", class: "icon")
            %p
              = render 'layouts/iubenda'
          .span4
            .pull-right
              %p
                = link_to t('navbar.about_us'), about_path
                \::
                = link_to 'Contribute', contribute_path
                \::
                = link_to 'Press', press_path
              %p 
                All rights reserved.

    = javascript_include_tag :application
    = yield(:javascript) if content_for?(:javascript)
= render 'layouts/uservoice'

