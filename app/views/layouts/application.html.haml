!!!
%html
  %head
    %title Coworfing 
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}

    %script{:src => "//maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}

    = stylesheet_link_tag :application, :media => "all"
    = csrf_meta_tags

    = render 'layouts/analytics'

  %body{class: "#{params[:controller]}_#{params[:action]}"}
    = render :partial => "shared/flash_messages", :locals => {:flash => flash}

    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = link_to 'Coworfing', root_url, class: 'brand'
          .nav-collapse
            %ul.nav
              -if user_signed_in?
                %li
                  = link_to map_path do
                    %i.icon-pushpin.icon-white
                    = t('navbar.map') 
              %li
                = link_to places_path do
                  %i.icon-th.icon-white
                  = t('navbar.places') 
              %li
                = link_to people_path do
                  %i.icon-user.icon-white
                  = t('navbar.people')

            - unless user_signed_in?
              %ul.nav.pull-right
                %li= link_to t('login'), new_user_session_path
            - else
              %ul.nav.pull-right
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown"}
                    %i.icon-question-sign.icon-white
                    = t('navbar.requests')
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to received_place_requests_path do
                        %i.icon-inbox.icon-white
                        = t('navbar.received') 
                    %li
                      = link_to sent_place_requests_path do
                        %i.icon-share.icon-white
                        = t('navbar.sent')
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown"}
                    %i.icon-user.icon-white
                    = t('navbar.logged_as')
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to submitted_places_path do
                        %i.icon-home.icon-white
                        = t('navbar.your_places') 
                    %li= link_to t('navbar.invite'), new_user_invitation_path
                    %li= link_to t('navbar.your_profile'), user_settings_edit_path 
                    %li= link_to t('navbar.your_password'), user_password_edit_path 
                    %li.divider
                    %li= link_to t('navbar.log_out'), destroy_user_session_path, method: :delete


    #container.container
      #main{:role => "main"}
        = yield

      %footer
        .row.footer
          .span12
            %ul.links
              %li
                =link_to(image_tag("facebook.png"), "http://www.facebook.com/coworfing")
                
              %li
                =link_to(image_tag("twitter.png"), "http://www.twitter.com/coworfing")
              %li
                = link_to(image_tag('tumblr.jpg'), 'http://coworfing.tumblr.com')
              %li
                = link_to(image_tag('gmail.png'),"mailto:coworfing@gmail.com")
              %li
                = link_to t('navbar.about_us'), about_path
              %li
                = link_to 'Contribute', contribute_path
              %li.privacy
                = render 'layouts/iubenda'

    = javascript_include_tag :application

= render 'layouts/uservoice'

