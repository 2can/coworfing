!!!
%html
  %head
    %h1
      %title Coworfing 
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}

    %link{href: 'http://fonts.googleapis.com/css?family=Lobster', rel:'stylesheet', type:'text/css'}

    %script{:src => "//maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}

    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  
    :javascript
      var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-30309045-1']);
        _gaq.push(['_trackPageview']);
        (function() {
        var ga = document.createElement('script');
        ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

    #fb-root
      :javascript
        (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=225646797493471";
        fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk'));

  %body{class: "#{params[:controller]}_#{params[:action]}"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          = link_to 'Coworfing', root_url, class: 'brand'
          .nav-collapse
            %ul.nav
              -if user_signed_in?
                %li
                  = link_to map_path do
                    %i.icon-pushpin.icon-white
                    = t('navbar.map') 
              %li
                = link_to places_path do
                  %i.icon-th.icon-white
                  = t('navbar.places') 
              %li
                = link_to people_path do
                  %i.icon-user.icon-white
                  = t('navbar.people') 
              %li.divider-vertical
              %li
                = link_to about_path do
                  %i.icon-heart.icon-white
                  = t('navbar.about_us')
              %li
                = link_to('http://coworfing.tumblr.com') do
                  %i.icon-pencil.icon-white
                  = t('navbar.blog')


            - unless user_signed_in?
              %ul.nav.pull-right
                %li= link_to t('login'), new_user_session_path
            - else
              %ul.nav.pull-right
                %li
                  %a{:href => "mailto:coworfing@gmail.com"}
                    %i.icon-envelope.icon-white
                    Bug report
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown"}
                    %i.icon-question-sign.icon-white
                    = t('navbar.requests')
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to received_place_requests_path do
                        %i.icon-inbox.icon-white
                        = t('navbar.received') 
                    %li
                      = link_to sent_place_requests_path do
                        %i.icon-share.icon-white
                        = t('navbar.sent') 
                %li.divider-vertical
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown"}
                    %i.icon-user.icon-white
                    = t('navbar.logged_as')
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to submitted_places_path do
                        %i.icon-home.icon-white
                        = t('navbar.your_places') 
                    %li= link_to t('navbar.your_profile'), edit_user_registration_path
                    %li.divider
                    %li= link_to t('navbar.help'), destroy_user_session_path, method: :delete
                    %li= link_to t('navbar.log_out'), destroy_user_session_path, method: :delete


    #container.container-fluid
      = render :partial => "shared/flash_messages", :locals => {:flash => flash}

      #main{:role => "main"}
        = yield

    %footer
      %hr
      .row
        .span.languages.left
          = link_to_unless_current image_tag("flags/gb.png"), locale: "en"
          | 
          = link_to_unless_current image_tag("flags/fr.png"), locale: "fr"
          |
          = link_to_unless_current image_tag("flags/es.png"), locale: "es"
          |
          = link_to_unless_current image_tag("flags/br.png"), locale: "pt-BR"
          |
          = link_to_unless_current image_tag("flags/it.png"), locale: "it"
        .span.pull-right
          %a#iubenda-embed.iubenda-white{:href => "https://www.iubenda.com/privacy-policy/327733", :title => "Privacy Policy"} Privacy Policy
          :javascript
              (function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "https://cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; w.addEventListener ? w.addEventListener("load", loader, false) : w.attachEvent("onload", loader);})(window, document);
                      
      .row.center
        %a{:href => "mailto:coworfing@gmail.com"}Write to Coworfing's team
        |
        %a{:href => "http://www.facebook.com/coworfing"}Find us on Facebook
        |
        %a{:href => "http://www.twitter.com/coworfing"}Follow us on Twitter
